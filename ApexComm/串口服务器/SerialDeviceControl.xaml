<UserControl x:Class="ApexComm.串口服务器.SerialDeviceControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ApexComm.串口服务器"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="400">

    <StackPanel ClipToBounds="True">
        <Canvas Height="40">
            <Button x:Name="button_set" Content="修改设置" Canvas.Left="10" Canvas.Top="10" Width="75" Click="button_set_Click" />
            <Button x:Name="button_start" Content="激活装置" Canvas.Left="100" Canvas.Top="10" Width="75" Click="button_start_Click" />
            <Button x:Name="button_reset" Content="复位装置" Canvas.Left="192" Canvas.Top="10" Width="75" Click="button_reset_Click" />
            <Button x:Name="button_monitor" Content="监视窗口" Canvas.Left="287" Canvas.Top="10" Width="75" Click="button_monitor_Click" />
        </Canvas>
        <Border BorderBrush="Blue" Margin="5" BorderThickness="2" CornerRadius="5">
            <StackPanel Margin="10" Name="sp_msglist" TextBlock.FontWeight="ExtraBold"></StackPanel>
        </Border>
    </StackPanel>
</UserControl>